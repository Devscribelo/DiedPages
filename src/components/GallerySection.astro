---
import { bimages } from '@/lib/data'
import OpenImage from "./OpenImage.astro";
---

<h2
  class="text-[#0e0e1b] text-xl md:text-[22px] font-bold leading-tight tracking-[-0.015em] pb-3 pt-5 mx-auto"
>
  ÁLBUM DE FOTOS
</h2>
<div class="grid grid-cols-2 md:grid-cols-4 gap-3 p-4">
  {
    bimages.map((bimage) => <OpenImage image={bimage}/>)
  }
</div>

<a href="/galeria">
  <button
    class="justify-center mx-auto bg-[#0e0e1b] text-white hover:text-[#0e0e1b] font-bold py-3 px-7 rounded-full flex items-center gap-2 transition-colors duration-200 hover:bg-[#d4b577]">
    Ver más Fotos
    <div class="flex justify-center items-center">
    </div>
  </button>
</a>
