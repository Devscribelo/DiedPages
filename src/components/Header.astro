---
import { getEntry } from "astro:content";
const header = await getEntry('header','header')
const {logo, name, link1, namelink1, link2, namelink2, link3, namelink3, link4, namelink4 } = header.data
---
<header id="header" class="flex items-center justify-between border-b border-solid border-[#e8e8f3] px-4 py-3 md:px-10 sticky top-0 z-50 bg-white shadow-md">
    <div class="flex items-center gap-4 text-[#0e0e1b]">
        <div class="w-10 h-10">
            <img src={logo} alt="">
        </div>
        <h2 class="text-lg font-bold leading-tight tracking-[-0.015em]">{name}</h2>
    </div>
    <div class="flex flex-1 justify-end gap-4 md:gap-8">
        <div class="hidden md:flex items-center gap-4 md:gap-9">
            <a class="text-sm font-medium leading-normal text-[#0e0e1b]" href={link1}>{namelink1}</a>
            <a class="text-sm font-medium leading-normal text-[#0e0e1b]" href={link2}>{namelink2}</a>
            <a class="text-sm font-medium leading-normal text-[#0e0e1b]" href={link3}>{namelink3}</a>
            <a class="text-sm font-medium leading-normal text-[#0e0e1b]" href={link4}>{namelink4}</a>
        </div>
    </div>
</header>
