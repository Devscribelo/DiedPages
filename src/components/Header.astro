---
import { getEntry } from "astro:content";
const header = await getEntry("header", "header");
const {
  logo,
  name,
  link1,
  namelink1,
  link2,
  namelink2,
  link3,
  namelink3,
  link4,
  namelink4,
} = header.data;
---

<header
  id="header"
  class="flex items-center justify-between border-b border-solid border-[#e8e8f3] px-4 py-3 md:px-10 sticky top-0 z-50 bg-white shadow-md"
>
  <a href="/" class="flex items-center gap-4 text-[#0e0e1b]">
    <div class="w-10 h-10">
      <img src={logo} alt="Logo" />
    </div>
    <h2 class="text-lg font-bold leading-tight tracking-[-0.015em]">{name}</h2>
  </a>

  <!-- Menu Toggle for Mobile -->
  <input type="checkbox" id="menu-toggle" class="hidden" />
  <label
    for="menu-toggle"
    class="block md:hidden text-[#0e0e1b] cursor-pointer relative pl-4 pr-4"
  >
    <svg
      id="menu-icon"
      class="w-6 h-6 transition-transform duration-300"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        id="icon-bar1"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M4 6h16"></path>
      <path
        id="icon-bar2"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M4 12h16"></path>
      <path
        id="icon-bar3"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M4 18h16"></path>
      <path
        id="icon-close"
        class="hidden"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M6 18L18 6M6 6l12 12"></path>
    </svg>
  </label>

  <!-- Desktop Menu -->
  <nav class="hidden md:flex flex-1 justify-end gap-4 md:gap-8">
    <a class="text-sm font-medium leading-normal text-[#0e0e1b]" href={link1}
      >{namelink1}</a
    >
    <a class="text-sm font-medium leading-normal text-[#0e0e1b]" href={link2}
      >{namelink2}</a
    >
    <a class="text-sm font-medium leading-normal text-[#0e0e1b]" href={link3}
      >{namelink3}</a
    >
    <button class="text-sm font-medium leading-normal text-[#0e0e1b]" id="logoutButton">Salir</button>
  </nav>

  <!-- Mobile Menu -->
  <div
    class="fixed inset-x-0 top-14 bg-white shadow-lg transition-transform duration-300 transform -translate-y-full z-40 overflow-y-auto p-6"
    id="mobile-menu"
  >
    <div class="flex flex-col space-y-4 w-full">
      <a
        class="text-xl text-gray-900 hover:text-blue-600 transition-colors duration-200 border-b border-gray-300 pb-2"
        href={link1}>{namelink1}</a
      >
      <a
        class="text-xl text-gray-900 hover:text-blue-600 transition-colors duration-200 border-b border-gray-300 pb-2"
        href={link2}>{namelink2}</a
      >
      <a
        class="text-xl text-gray-900 hover:text-blue-600 transition-colors duration-200 border-b border-gray-300 pb-2"
        href={link3}>{namelink3}</a
      >
      <a
        class="text-xl text-gray-900 hover:text-blue-600 transition-colors duration-200 border-b border-gray-300 pb-2"
        href={link4}>{namelink4}</a
      >
    </div>
  </div>
</header>

<style>
  /* Menu Toggle Styles */
  #menu-toggle:checked ~ #mobile-menu {
    transform: translateY(0);
  }

  /* Icon Transition Styles */
  #menu-toggle:checked ~ #menu-icon #icon-bar1,
  #menu-toggle:checked ~ #menu-icon #icon-bar2,
  #menu-toggle:checked ~ #menu-icon #icon-bar3 {
    opacity: 0;
  }

  #menu-toggle:checked ~ #menu-icon #icon-close {
    display: block;
  }

  /* Mobile Menu Styles */
  #mobile-menu {
    display: none;
    height: auto; /* Adjusted to content height */
  }

  /* Mobile Menu Styles for when checkbox is checked */
  #menu-toggle:checked ~ #mobile-menu {
    display: flex;
    transform: translateY(0);
  }
</style>
