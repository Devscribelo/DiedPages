---
interface Props {
  text: string;
  href: string;
}

const { text, href} = Astro.props;
---

<a href={href}>
  <button
    class="justify-center mx-auto bg-[#0e0e1b] text-white hover:text-[#0e0e1b] font-bold py-3 px-7 rounded-full flex items-center transition-colors duration-200 hover:bg-[#d4b577] text-xs"
  >
    {text}
    <div class="flex justify-center items-center"></div>
  </button>
</a>
