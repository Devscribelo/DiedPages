---
import OpenVideo from "./OpenVideo.astro";
import ButtonVerMas from "./ButtonVerMas.astro";
import { videos } from '@/lib/data'
---

<h2 class="text-[#0e0e1b] text-xl md:text-[22px] font-bold leading-tight tracking-[-0.015em] pb-3 pt-5 mx-auto mt-5">ÁLBUM DE VIDEOS</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-3 p-4">
    {
      videos.slice(0,2).map((video) => (
        <OpenVideo video={video}/>
      ))
    }
  </div>

<ButtonVerMas href='/videos' text="VER MÁS VIDEOS"/>