---
import { getEntry } from "astro:content";

const viodeogallery = await getEntry('VideoGallerySection','videogallerysection')
const {video1, video2, video3, video4 } = viodeogallery.data
---

<h2 class="text-[#0e0e1b] text-xl md:text-[22px] font-bold leading-tight tracking-[-0.015em] pb-3 pt-5">Video
    Gallery</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-3 p-4">
    <div class="flex flex-col gap-3">
      <iframe class="w-full aspect-video rounded-xl" src={video1}
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen></iframe>
    </div>
    <div class="flex flex-col gap-3">
      <iframe class="w-full aspect-video rounded-xl" src={video2}
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen></iframe>
    </div>
    <div class="flex flex-col gap-3">
      <iframe class="w-full aspect-video rounded-xl" src={video3}
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen></iframe>
    </div>
    <div class="flex flex-col gap-3">
      <iframe class="w-full aspect-video rounded-xl" src={video4}
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen></iframe>
    </div>