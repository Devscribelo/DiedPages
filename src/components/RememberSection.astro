---
import { mensajes } from "@/lib/data";
import ButtonVerMas from "./ButtonVerMas.astro";
---

<h2
  class="text-[#0e0e1b] text-xl md:text-[22px] font-bold leading-tight tracking-[-0.015em] pb-3 pt-5 mx-auto text-center"
>
  MENSAJES DE RECUERDO
</h2>

<div class="max-w-2xl mx-auto overflow-hidden flex flex-col">
  <div class="carrousel">
    <input type="radio" name="items" id="radio-1" checked />
    <input type="radio" name="items" id="radio-2" />
    <input type="radio" name="items" id="radio-3" />
    <ul class="items">
      {
        mensajes.slice(0, 3).map((mensaje) => (
          <li>
            <div class="item">
              <div class="flex flex-col md:flex-row my-3">
                <div class="flex-shrink-0 w-full md:w-1/3 flex flex-col justify-center items-center p-4 bg-[#0e0e1b] border-b md:border-b-0 md:border-r border-black rounded-tl-lg rounded-bl-lg">
                  <div class="rounded-full overflow-hidden w-32 h-32 md:w-48 md:h-48 mb-4">
                    <div
                      class="w-full h-full bg-center bg-no-repeat bg-cover"
                      style={mensaje.img}
                    />
                  </div>
                  <h1 class="font-dancingScript text-[#a8955e] text-xl md:text-[22px] font-bold leading-tight tracking-[-0.015em]">
                    {mensaje.name}
                  </h1>
                </div>
                <div class="hidden md:block w-px bg-gray-300" />
                <div class="flex-1 p-6 flex flex-col justify-center bg-[#0e0e1b] rounded-tr-lg rounded-br-lg">
                  <h2 class="text-[#a8955e] text-xl md:text-[22px] font-bold leading-tight tracking-[-0.015em] pb-3">
                    Mensaje
                  </h2>
                  <p class="text-[#ffffff] text-base font-normal leading-normal">
                    {mensaje.remember}
                  </p>
                </div>
              </div>
            </div>
          </li>
        ))
      }
    </ul>
    <div class="itemsNavigation">
      <label for="radio-1" id="dotForRadio-1"></label>
      <label for="radio-2" id="dotForRadio-2"></label>
      <label for="radio-3" id="dotForRadio-3"></label>
    </div>
    <div class="mt-4">
      <ButtonVerMas href='/mensajes' text="VER MÃS MENSAJES" />
    </div>
  </div>
</div>

<style>
  .carrousel {
    overflow: hidden;
    position: relative;
    text-align: center;
    padding: 1em 0;
    max-width: 750px;
    margin: auto;
  }

  .carrousel .items {
    width: 400%;
    overflow: hidden;
    list-style: none;
    position: relative;

    -webkit-transition: transform 0.5s;
    -moz-transition: transform 0.5s;
    -o-transition: transform 0.5s;
    transition: transform 0.5s;
  }

  .carrousel .items li {
    width: 25%;
    position: relative;
    float: left;
  }

  .carrousel li div {
    color: #666666;
    font-size: 1.3em;
    font-weight: bold;
  }

  .carrousel li img {
    max-width: 100%;
    object-fit: cover;
    vertical-align: middle;
  }

  .carrousel li div.item {
    color: #777777;
    display: block;
  }

  .carrousel .itemsNavigation {
    display: flex;
    justify-content: center;
    list-style: none;
    text-align: center;
  }

  .carrousel input {
    display: none;
  }

  .carrousel .itemsNavigation label {
    float: left;
    margin: 6px;
    display: block;
    height: 10px;
    width: 10px;
    -webkit-border-radius: 50%;
    border-radius: 50%;
    border: solid 2px #a8955e;
    font-size: 0;
  }

  #radio-1:checked ~ .items {
    transform: translateX(0%);
  }

  #radio-2:checked ~ .items {
    transform: translateX(-25%);
  }

  #radio-3:checked ~ .items {
    transform: translateX(-50%);
  }

  #radio-4:checked ~ .items {
    transform: translateX(-75%);
  }

  .carrousel .itemsNavigation label:hover {
    cursor: pointer;
  }

  .carrousel #radio-1:checked ~ .itemsNavigation label#dotForRadio-1,
  .carrousel #radio-2:checked ~ .itemsNavigation label#dotForRadio-2,
  .carrousel #radio-3:checked ~ .itemsNavigation label#dotForRadio-3,
  .carrousel #radio-4:checked ~ .itemsNavigation label#dotForRadio-4 {
    background: #a8955e;
  }
</style>
