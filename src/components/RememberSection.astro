---
import { getEntry } from "astro:content"

const remembered = await getEntry("remember", "remember")
const { img, name, remember } = remembered.data
---

<h2
  class="text-[#0e0e1b] text-xl md:text-[22px] font-bold leading-tight tracking-[-0.015em] pb-3 pt-5 mx-auto text-center"
>
  Mensajes de Recuerdos
</h2>

<div class="max-w-2xl mx-auto bg-white shadow-lg rounded-lg overflow-hidden flex flex-col md:flex-row">
  <!-- Contenedor de la imagen -->
  <div class="flex-shrink-0 w-full md:w-1/3 flex flex-col justify-center items-center p-4 bg-[#b0e7b3] border-b md:border-b-0 md:border-r border-black">
    <div class="rounded-full overflow-hidden w-32 h-32 md:w-48 md:h-48 mb-4">
      <div
        class="w-full h-full bg-center bg-no-repeat bg-cover"
        style={img}
      >
      </div>
    </div>
    <h1 class="text-[#0e0e1b] text-xl md:text-[22px] font-bold leading-tight tracking-[-0.015em]">
      {name}
    </h1>
  </div>
  <!-- Línea de separación -->
  <div class="hidden md:block w-px bg-gray-300"></div>
  <!-- Contenedor de texto -->
  <div class="flex-1 p-6 flex flex-col justify-center bg-white">
    
    <h2 class="text-[#0e0e1b] text-xl md:text-[22px] font-bold leading-tight tracking-[-0.015em] pb-3">
      Mensaje
    </h2>
    <p class="text-[#0e0e1b] text-base font-normal leading-normal">
      {remember}
    </p>
  </div>
</div>




