---
import { mensajes } from "@/lib/data";
import ButtonVerMas from "./ButtonVerMas.astro";
import CardRemember from "./CardRemember.astro";
---

<h2 class="text-[#0e0e1b] text-xl md:text-[22px] font-bold leading-tight tracking-[-0.015em] pb-3 pt-5 mx-auto mt-5">MENSAJES DE RECUERDO</h2>

<div class="w-full max-w-3xl mx-auto px-4">
  <div class="container">
      {mensajes.slice(0, 3).map((mensaje, index) => (
        <div class="item">
          <CardRemember mensaje={mensaje} index={index} />
        </div>
      ))}
      </div>
  <div class="mt-8 text-center">
    <ButtonVerMas href='/mensajes' text="VER MÁS MENSAJES" />
  </div>
</div>

<style>
.container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  
  align-items: center;
  gap: 16px; /* Espacio entre los elementos */
}
.item {
    width: 300px; /* Ancho predeterminado para los botones */
    box-sizing: border-box;
  }
</style>
