---
import { imgGallery } from '../utilities/typescript';

const availableFiles  = imgGallery();
const coverImage = availableFiles[0]; // Primera imagen es la portada oe kbros
---

<h2 class="text-[#0e0e1b] text-xl md:text-[22px] font-bold leading-tight tracking-[-0.015em] pb-3 pt-5">
    Gallery</h2>
<div class="w-full bg-center bg-no-repeat bg-cover rounded-xl aspect-[4/2]" style={coverImage}></div>
<div class="grid grid-cols-2 md:grid-cols-3 gap-3 p-4">
    {
        availableFiles.slice(1).map((file) => (
            <div class="flex flex-col gap-3">
                <div class="w-full bg-center bg-no-repeat aspect-square bg-cover rounded-xl"
                    style={file}>
                    
                </div>
            </div>
        ))
    }
</div>